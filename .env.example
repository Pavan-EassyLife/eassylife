# =============================================================================
# EASSYLIFE FRONTEND ENVIRONMENT CONFIGURATION (EXAMPLE)
# =============================================================================
# This is an example environment file for the EassyLife frontend application.
# Copy this file to .env and customize the values for your environment.
#
# IMPORTANT:
# - All variables must be prefixed with VITE_ to be accessible in the browser
# - Never commit sensitive data like API keys to version control
# - Use .env.local for local overrides
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=EassyLife
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered E-Commerce Marketplace

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Options: development, staging, production
VITE_NODE_ENV=development
VITE_APP_ENV=development

# Enable/disable debug mode
VITE_DEBUG=true
VITE_VERBOSE_LOGGING=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Primary API endpoints
VITE_API_BASE_URL_PRODUCTION=https://app.eassylife.in
VITE_API_BASE_URL_STAGING=http://13.201.2.247:5001
VITE_API_BASE_URL_LOCAL=http://localhost:5001

# API path configuration
VITE_API_MIDDLE_PATH=api/customer
VITE_API_VERSION=v2.0.0

# API timeout settings (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Token storage settings
VITE_TOKEN_STORAGE_KEY=eassylife_auth_token
VITE_REFRESH_TOKEN_KEY=eassylife_refresh_token
VITE_USER_DATA_KEY=eassylife_user_data

# Session settings
VITE_SESSION_TIMEOUT=1800000
VITE_AUTO_LOGOUT_WARNING=300000

# OTP Configuration
VITE_OTP_LENGTH=6
VITE_OTP_RESEND_TIMEOUT=30
VITE_OTP_MAX_ATTEMPTS=3

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=false

# Animation settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300
VITE_ENABLE_REDUCED_MOTION=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Authentication features
VITE_ENABLE_GUEST_LOGIN=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_BIOMETRIC_AUTH=false

# Application features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false

# Location and Address features
VITE_ENABLE_GOOGLE_MAPS=true
VITE_ENABLE_LOCATION_SERVICES=true
VITE_ENABLE_ADDRESS_AUTOCOMPLETE=true
VITE_ENABLE_GPS_PERMISSION=true
VITE_ENABLE_ADDRESS_MANAGEMENT=true

# Development features
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_ERROR_BOUNDARY=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# CDN and Asset URLs
VITE_CDN_BASE_URL=https://eassyserve-cdn.s3-accelerate.amazonaws.com
VITE_IMAGE_BASE_URL=https://eassyserve-cdn.s3.ap-south-1.amazonaws.com

# Google Maps API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Required for location services, address autocomplete, and map functionality
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Maps Libraries (comma-separated)
VITE_GOOGLE_MAPS_LIBRARIES=places,geometry

# Location Services Configuration (Mumbai as default)
VITE_DEFAULT_LOCATION_LAT=19.0760
VITE_DEFAULT_LOCATION_LNG=72.8777
VITE_LOCATION_ACCURACY=high
VITE_LOCATION_TIMEOUT=10000
VITE_LOCATION_MAX_AGE=60000

# Analytics (leave empty if not using)
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Error tracking (leave empty if not using)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_TRACKING=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Caching settings
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000
VITE_ENABLE_LAZY_LOADING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS settings
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.eassylife.in

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development server settings
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_OPEN=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build output settings
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2015

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: error, warn, info, debug
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_NETWORK_LOGS=true
VITE_ENABLE_ERROR_LOGS=true

# =============================================================================
# MOBILE CONFIGURATION
# =============================================================================
# PWA settings
VITE_PWA_NAME=EassyLife
VITE_PWA_SHORT_NAME=EassyLife
VITE_PWA_DESCRIPTION=AI-Powered E-Commerce Marketplace
VITE_PWA_THEME_COLOR=#FFA301
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# Mobile app links
VITE_ANDROID_APP_ID=com.eassylife
VITE_IOS_APP_ID=6743106235
VITE_APP_STORE_URL=https://onelink.to/rwzgt2

# =============================================================================
# LOCALIZATION
# =============================================================================
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi
VITE_ENABLE_RTL=false

# =============================================================================
# CONTACT & SUPPORT
# =============================================================================
VITE_SUPPORT_EMAIL=support@eassylife.in
VITE_SUPPORT_PHONE=+91-XXXXXXXXXX
VITE_COMPANY_NAME=EassyLife Technologies
VITE_COMPANY_WEBSITE=https://eassylife.in

# =============================================================================
# SOCIAL MEDIA (Optional - leave empty if not using)
# =============================================================================
VITE_FACEBOOK_URL=
VITE_TWITTER_URL=
VITE_INSTAGRAM_URL=
VITE_LINKEDIN_URL=

# =============================================================================
# LEGAL
# =============================================================================
VITE_PRIVACY_POLICY_URL=https://eassylife.in/privacy-policy
VITE_TERMS_OF_SERVICE_URL=https://eassylife.in/terms-of-service
VITE_COOKIE_POLICY_URL=https://eassylife.in/cookie-policy
